<div class="container">
  <div class="row">
    <%= render partial: "shared/user"%>
    <div class="col-xs-12 col-md-8">
      <h2>Tweets</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-xs-4 col-md-3">
            <%= image_tag @tweet.user.avatar, height: 100, width: 100%>
          </div>
          <h4><%= link_to @tweet.user.name, users_path(@tweet.user)%>, <%= @tweet.created_at.to_date %>, <%= @tweet.created_at.strftime("%I:%M%p") %></h4>
          <p><%= @tweet.description%></p>
          <div class="reply-color">
            <%= link_to "Reply",tweet_replies_path(@tweet), class:"reply-color"%>
            (<%= @tweet.replies.count%>)
          </div>
          <div class="like-color">
          <%= render partial: "shared/like", locals: {tweet: @tweet}%>
          (<%= @tweet.likes.count%>)
          </div>
        </div>
      </div>

      <h2>Replies</h2>
      <% @tweet.replies.each do |reply| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-xs-4 col-md-3">
            <%= image_tag reply.user.avatar, height: 100, width: 100%>
          </div>
          <h3><%= link_to reply.user.name, tweets_user_path(@tweet.user)%>, <%= reply.created_at.to_date %>, <%= reply.created_at.strftime("%I:%M%p") %></h3>
          <p><%= reply.comment%></p>
        </div>
      </div>
      <%end%>
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, placeholder: " ", class: "form-control",rows:"7"%>
        </div>
        <div class="form-group btn-right">
          <%= f.submit"Reply", class:" btn"%>
        </div>
      <% end %>

    </div>
