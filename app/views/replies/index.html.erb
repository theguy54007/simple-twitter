<div class="container">
  <div class="row">
    <%= render partial: "shared/user"%>
    <div class="col-xs-12 col-md-8">
      <h2>Tweets</h2>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= image_tag @tweet.user.avatar, height: 100, width: 100%>
          <h3><%= link_to @tweet.user.name, users_path(@tweet.user)%></h3>
          <p><%= @tweet.description%></p>
          <%= link_to "Reply",tweet_replies_path(@tweet)%>
          <%= @tweet.replies.count%>
          <%= render partial: "shared/like", locals: {tweet: @tweet}%>
          <%= @tweet.likes.count%>
        </div>
      </div>
      <br>
      <h2>Replies</h2>
      <% @tweet.replies.each do |reply| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <%= image_tag reply.user.avatar, height: 100, width: 100%>
          <h3><%= link_to reply.user.name, users_path(@tweet.user)%></h3>
          <p><%= reply.comment%></p>
        </div>
      </div>
      <%end%>
      <%= form_for [@tweet, @reply] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, placeholder: "留個言吧", class: "form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit"Reply", class:" btn btn-primary"%>

        </div>
      <% end %>

    </div>
