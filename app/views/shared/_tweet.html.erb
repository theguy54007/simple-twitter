<div class="col-xs-12 col-md-8">
  <% @tweets.each do |tweet|%>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="col-xs-4 col-md-3">
      <%= image_tag tweet.user.avatar, height: 100, width: 100%>
    </div>
      <h4><%= link_to tweet.user.name, users_path(tweet.user)%>, <%= tweet.created_at.to_date %>, <%= tweet.created_at.strftime("%I:%M%p") %></h4>
      <p><%= tweet.description%></p>
      <div class="reply-color">
        <%= link_to "Reply",tweet_replies_path(tweet), class:"reply-color"%>
        (<%= tweet.replies.count%>)
      </div>
      
      <%= render partial: "shared/like", locals: {tweet: tweet}%>
      <%if tweet.is_liked?(current_user)%>
        <div class="like-color">
          (<%= tweet.likes.count%>)
        </div>
      <%end%>

    </div>

  </div>
  <%end%>
</div>
