<div class="container">
  <div class="row">
    <%= form_for @user do |f|%>
    <div class="col-xs-6 col-md-4">
      <div class="edit-img">
        <% for id in 0..20 %>
          <% if image_path(@user.avatar).include?('/'+ 'user'+id.to_s+'.jpg') %>
            <%= image_tag('/avatar/'+'user'+id.to_s+'.jpg', height: 300, width: 300) %>
          <% end %>
        <%end%>
      
      </div>


      <div class="form-group">
      <%= f.label :avatar, "Browse files"%>

      <%= f.file_field :avatar %>
      </div>

    </div>
    <div class="col-xs-12 col-md-8">

      <div class="form-group">
        <%= f.text_area :name, placeholder:"Name", class:"form-control",rows:"3"%>
      </div>
      <div class="form-group">
        <%= f.text_area :introduction, placeholder:"Type anything about you here....", class:"form-control",rows:"11"%>
      </div>
      <div class="form-group btn-right">
        <%= f.submit"Update", class:" btn "%>

      </div>
      <%end%>
    </div>
  </div>
</div>
