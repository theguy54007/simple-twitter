<div class="container">
  <div class="row">
    <%= render partial: "shared/user"%>
    <div class="col-xs-13 col-md-9">
      <h2>Following</h2>
      <% @followings.each do |following|%>
        <div class="col-xs-8 col-md-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="col-xs-4 col-md-4">
                <%= image_tag following.avatar, height: 100, width: 100%>
              </div>
              <h3><%= link_to following.name, tweets_user_path(following)%></h3>
              <p><%= truncate(following.introduction, length: 80) %></p>
              <%if current_user.is_following?(following)%>
                <%= link_to 'Unfollow', followship_path(following), method: :delete, class:"btn btn-link"%>
              <%else%>
                <%= link_to 'Follow',followships_path(following_id: following), method: :post, class:"btn btn-default" %>
              <% end %>
            </div>
          </div>
        </div>
        <%end%>
    </div>
  </div>
</div>
