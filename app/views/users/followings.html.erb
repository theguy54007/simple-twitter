<div class="container">
  <div class="row">
    <%= render partial: "shared/user"%>
    <div class="col-xs-13 col-md-9">
      <h2>Following</h2>
      <% @followings.each do |following|%>
        <div class="col-xs-8 col-md-6">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="col-xs-4 col-md-4">
                <% for id in 0..20 %>
                  <% if image_path(following.avatar).include?('/'+ 'user'+id.to_s+'.jpg') %>
                    <%= image_tag('/avatar/'+'user'+id.to_s+'.jpg', height: 100, width: 100) %>
                  <% end %>
                <%end%>
              </div>

              <h3><%= link_to following.name, tweets_user_path(following)%></h3>
              <p><%= truncate(following.introduction, length: 50) %></p>
              <div class="btn-right">
                <%= render partial: "shared/follow", locals: {user: following}%>

              </div>


            </div>
          </div>
        </div>
        <%end%>
    </div>
  </div>
</div>
