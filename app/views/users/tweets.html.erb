<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-4">

        <%= image_tag @user.avatar, width: 300, height: 300%>
        <h2><%= @user.name%></h2>
        <p><%= @user.introduction%></p>


    </div>
    <div class="col-xs-12 col-md-8">
      <% @tweets.each do |tweet|%>
      <div class="panel panel-default">
        <div class="panel-body">

          <%= image_tag tweet.user.avatar, height: 100, width: 100%>
          <h3><%= link_to tweet.user.name, users_path(tweet.user)%></h3>
          <p><%= tweet.description%></p>
          <%= link_to "Reply",tweet_replies_path(tweet)%>
          <%= tweet.replies.count%>
          <%= render partial: "shared/like", locals: {tweet: tweet}%>
          <%= tweet.likes.count%>
        </div>

      </div>
      <%end%>
    </div>

  </div>
</div>
